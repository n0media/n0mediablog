    }
    <button
      class="social-link social-share-icon copy-url-button"
      aria-label="Copy URL"
      title="Copy URL to clipboard"
      data-url={url}
    >
      <svg
        class="size-5"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
        <path d="m4 16c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2h8c1.1 0 2 .9 2 2"></path>
      </svg>
    </button>
  </div>
</div>

<script>
  function initSocialShare() {
    const copyButtons = document.querySelectorAll(".copy-url-button");

    copyButtons.forEach((button) => {
      button.addEventListener("click", async (e) => {
        e.preventDefault();
        const url = (button as HTMLElement).dataset.url;

        if (!url) return;

        try {
          await navigator.clipboard.writeText(url);

          button.innerHTML = `
            <svg class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20,6 9,17 4,12"/>
            </svg>
          `;
        } catch (err) {
          console.error("Failed to copy URL:", err);
          
          try {
            const textArea = document.createElement("textarea");
            textArea.value = url;
            textArea.style.position = "fixed";
            textArea.style.left = "-999999px";
            textArea.style.top = "-999999px";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            document.body.removeChild(textArea);
          } catch (fallbackErr) {
            console.error("Fallback copy failed:", fallbackErr);
          }
        }
      });
    });
  }

  if (document.readyState !== "loading") {
    initSocialShare();
  } else {
    document.addEventListener("DOMContentLoaded", initSocialShare);
  }

  document.addEventListener("astro:page-load", initSocialShare);
</script>

<style>
  .social-share-compact {
    border-top: 1px solid #aaaaaa;
    padding-top: 1rem;
    margin-top: 1rem;
  }

  :global(.dark) .social-share-compact {
    border-top-color: #505050;
  }

  .social-share-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.5rem;
    background-color: #ababab1f;
    border: 1px solid #7070707a;
    transition: all 0.3s ease;
  }

  .social-share-icon:hover {
    background-color: #6262621f;
  }

  :global(.dark) .social-share-icon {
    background-color: #8585851a;
    border-color: #acacac30;
  }

  :global(.dark) .social-share-icon:hover {
    background-color: #70707030;
  }

  .copy-url-button {
    cursor: pointer;
  }
</style>
