---
interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description = "" } = Astro.props;

const shareData = {
  title: encodeURIComponent(title),
  url: encodeURIComponent(url),
  description: encodeURIComponent(description),
};

const shareLinks = [
  {
    name: "Twitter",
    url: `https://twitter.com/intent/tweet?text=${shareData.title}&url=${shareData.url}`,
    icon: "twitter",
  },
  {
    name: "LinkedIn",
    url: `https://www.linkedin.com/sharing/share-offsite/?url=${shareData.url}`,
    icon: "linkedin",
  },
  {
    name: "Reddit",
    url: `https://reddit.com/submit?url=${shareData.url}&title=${shareData.title}`,
    icon: "reddit",
  },
  {
    name: "Hacker News",
    url: `https://news.ycombinator.com/submitlink?u=${shareData.url}&t=${shareData.title}`,
    icon: "hackernews",
  },
  {
    name: "Dev.to",
    url: `https://dev.to/new?prefill=---%0Atitle: ${shareData.title}%0Apublished: false%0Adescription: ${shareData.description}%0A---%0A%0A[${shareData.title}](${shareData.url})`,
    icon: "devto",
  },
  {
    name: "Mastodon",
    url: `https://mastodon.social/share?text=${shareData.title} ${shareData.url}`,
    icon: "mastodon",
  },
  {
    name: "Bluesky",
    url: `https://bsky.app/intent/compose?text=${shareData.title} ${shareData.url}`,
    icon: "bluesky",
  },
  {
    name: "Tumblr",
    url: `https://www.tumblr.com/widgets/share/tool?posttype=link&title=${shareData.title}&caption=${shareData.description}&content=${shareData.url}&canonicalUrl=${shareData.url}`,
    icon: "tumblr",
  },
  {
    name: "Facebook",
    url: `https://www.facebook.com/sharer/sharer.php?u=${shareData.url}`,
    icon: "facebook",
  },
];
---

